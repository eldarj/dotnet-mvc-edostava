@using eDostava.Web.ViewModels

@{
    ViewData["Title"] = "Narucioci";
   
}
@model eDostava.Web.ViewModels.NarucilacPrikazVM

<h2>Narucioci</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>
                Svi narucioci
            </td>
        </tr>
        <tr>
            <td>#</td>
            <td>Ime</td>
            <td>Prezime</td>
            <td>Telefon</td>
            <td>Email</td>
            <td>Username</td>
            <td>Password</td>
            <td>Datum kreiranja</td>
            <td>Badge</td>
            <td>Blok</td>
            <td>Grad</td>
            <td>Poštanski broj</td>
            <td>Opcije</td>
        </tr>
    </thead>
    <tbody>
        @foreach (NarucilacPrikazVM.NaruciociInfo x in Model.Narucioci)
        {
            <tr>
                <td>@x.Narucilac.KorisnikID</td>
                <td>@x.Ime</td>
                <td>@x.Prezime</td>
                <td>@x.Telefon</td>
                <td>@x.Email</td>
                <td>@x.Username</td>
                <td>@x.Password</td>
                <td>@x.DatumKreiranja</td>
                <td>@x.BadgeNaziv</td>
                <td>@x.BlokNaziv</td>
                <td>@x.GradNaziv</td>
                <td>@x.PostanskiBroj</td>
                <td>
                    <a asp-action="Uredi" asp-route-Id="@x.NarucilacId" class="btn btn-info">Uredi</a>
                    <a asp-action="Obrisi" asp-route-Id="@x.NarucilacId" class="btn btn-warning">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Dodaj" class="btn btn-info">Dodaj</a>