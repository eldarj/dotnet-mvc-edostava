@using eDostava.Data.Models
@using eDostava.Web.ViewModels

@model GradUrediVM

<h2>Uredi Grad</h2>
<form action="/Grad/Snimi">
    <input type="text" name="id" class="form-control" value="@Model.GradId" />
    <div class="form-group">
        <label>Naziv</label>
        <input type="text" name="naziv" class="form-control" value="@Model.Naziv" />
    </div>
    <div class="form-group">
        <label>Poštanski Broj</label>
        <input type="number" name="postanskiBroj" class="form-control" value="@Model.PostanskiBroj" />
    </div>
    <div class="form-group">
        <label>Broj blokova</label>
        <input type="number" name="brojBlokova" class="form-control" value="@Model.BrojBlokova" readonly />
    </div>
    <input type="submit" value="Snimi" />
</form>

<div id="ajax-stavke-wrap" style="border: 1px solid lightblue;">
</div>

<script>
    $(document).ready(function () {
        $.get("/Blok?gradId=@Model.GradId", function (data, status) {
            $("#ajax-stavke-wrap").html(data);
        });
    });
</script>