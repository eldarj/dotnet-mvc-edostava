@model eDostava.Web.ViewModels.ProfilVM
<form method="post" asp-action="Snimi" ajax-poziv="da" ajax-rezultat="korisnik-right-wrap">
    <div class="form-group">
        <input asp-for="KorisnikID" class="form-control hidden" />
    </div>
    <div class="form-group">
        <label asp-for="Username">Username: </label>
        <input asp-for="Username" class="form-control" placeholder="Username" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password: </label>
        <input type="text" asp-for="Password" class="form-control" placeholder="Password" readonly />
    </div>
    <div class="form-group">
        <label asp-for="DatumKreiranja">Datum kreiranja: </label>
        <input asp-for="DatumKreiranja" class="form-control" placeholder="Datum kreiranja" readonly/>
    </div>
    <div class="form-group"v>
        <label asp-for="Ime">Ime: </label>
        <input asp-for="Ime" class="form-control" placeholder="Ime" />
        <span asp-validation-for="Ime"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezime">Prezime: </label>
        <input asp-for="Prezime" class="form-control" placeholder="Prezime" />
        <span asp-validation-for="Prezime"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefon">Telefon: </label>
        <input asp-for="Telefon" class="form-control" placeholder="Telefon" />
        <span asp-validation-for="Telefon"></span>
    </div>
    <div class="form-group">
        <label asp-for="BlokId">Blok: </label>
        <select asp-items="@Model.Blok" class="form-control" asp-for="BlokId"></select>
        <span asp-validation-for="BlokId"></span>
    </div>
    <div class="form-group">
        <label asp-for="BadgeId">Badge: </label>
        <select asp-items="@Model.Badge" class="form-control" asp-for="BadgeId"></select>
        <span asp-validation-for="BadgeId"></span>
    </div>
    <input type="submit" class="btn btn-main-color-1 btn-sm" value="Izmijeni" />
</form>
