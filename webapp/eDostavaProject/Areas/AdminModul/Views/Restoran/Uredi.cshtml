@using eDostava.Web.Areas.AdminModul.ViewModels

@model RestoranUrediVM

<div class="card">
    <small class="closeDivRow @(Model.PredefinedVlasnik ? "" : "d-none")">Zatvori</small>
    <div class="card-body">
        <div class="card-title">
            @if (Model.Naziv != null)
            {
                <h2>Restoran <span class="badge badge-danger">@Model.Naziv</span></h2>
            }
            else
            {
                <h2>Novi restoran</h2>
            }
        </div>
        <div class="card-text">
            <form asp-action="Snimi" asp-controller="Restoran" asp-area="AdminModul" enctype="multipart/form-data" 
                  ajax-poziv="da" ajax-rezultat="modAjaxContainer" 
                  data-alertify data-alertify-btn-pre-text="Uspješno ste spremili podatke!">
                <hr />
                <div class="row">
                    <div class="col-sm">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="PredefinedVlasnik" type="hidden" />
                        <div class="form-group">
                            <label>Naziv:</label>
                            <input type="text" asp-for="Naziv" class="form-control" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                        <div class="form-group @(Model.PredefinedVlasnik ? "d-none" : "")">
                            <label>Vlasnik:</label>
                            <select asp-for="VlasnikId" asp-items="@Model.Vlasnici" class="form-control">
                                <option disabled>Odaberite vlasnika restorana</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label>Slika:</label>
                            <input type="file" asp-for="Slika" class="form-control" />
                            <span asp-validation-for="Slika" class="text-danger"></span>
                            @if (Model.SlikaPath != null)
                            {
                                <div class="card" style="width: 18rem;">
                                    <img class="card-img-top" src="/@Model.SlikaPath" alt="Card image cap">
                                    <div class="card-body">
                                        Trenutna slika
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label>Web stranica (URL):</label>
                            <input type="text" asp-for="WebUrl" class="form-control" />
                            <span asp-validation-for="WebUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Telefon:</label>
                            <input type="text" asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Grad i blok:</label>
                            <select asp-for="BlokId" asp-items="@Model.Blokovi" class="form-control">
                                <option disabled>Odaberite blok i grad</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label>Opis:</label>
                            <input type="text" asp-for="Opis" class="form-control" />
                            <span asp-validation-for="Opis" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Slogan:</label>
                            <input type="text" asp-for="Slogan" class="form-control" />
                            <span asp-validation-for="Slogan" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr />
                <input type="submit" value="Snimi" class="btn btn-sm btn-primary" />
                <a asp-action="Index" asp-controller="Restoran" asp-area="AdminModul" class="btn btn-sm btn-danger @(Model.PredefinedVlasnik ? "d-none" : "")">Nazad</a>
            </form>
            <br /><br />
        </div>
    </div>
</div>
