@using eDostava.Web.Areas.KorisnikModul.ViewModels

@model NarudzbaPrikazVM

<h1>Moje narudžbe</h1>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Sifra</th>
            <th>Datum</th>
            <th>Ukupno (KM)</th>
            <th>Više</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Narudzbe)
        {
            <tr>
                <td><small>@x.Sifra</small></td>
                <td><small>@x.DatumVrijeme.ToString("dd.MM.yyyy H:mm")</small></td>
                <td><small>@x.UkupnaCijena</small></td>
                <td>
                    <a asp-action="Detaljno" asp-controller="Narudzba" asp-area="KorisnikModul" asp-route-id="@x.NarudzbaId" 
                       ajax-poziv="ajaxDa" ajax-rezultat="korisnik-right-wrap" class="btn btn-sm btn-light">Detaljno</a>
                </td>
            </tr>
        }
    </tbody>
</table>
